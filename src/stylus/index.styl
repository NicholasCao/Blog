article
.editor-preview-side //simplemde预览的样式
  h2,h3 
    margin-top 24px
    margin-bottom 16px
    font-weight 600
    line-height 1.25
    font-size 1.35rem
  h2 
    border-bottom 1px solid #ddd
    font-size 1.5rem
  dl
  ul
  ol 
  blockquote
  p
  table
    margin-bottom 16px
  ul 
    color #1E2A36
    line-height 1.5rem
    li
      list-style disc
      margin 0 1em
      line-height 1.8rem
  ol
    color #1E2A36
    line-height 1.5rem
    li
      list-style decimal
      margin 0 1em
      line-height 1.8rem
  p
    line-height 1.5rem
    color #1E2A36
    strong
      padding .1rem .2rem
      background rgba(27,31,35,.05)
      color #1f2d3d
      word-wrap break-word
      border-radius 3px
      font-weight normal
    a 
      line-height 1.5rem
      color #3192F5
    a:hover
      text-decoration underline
      color #3192F5
    img 
      max-width 100%
      height auto 
  blockquote
    p
      line-height 1.4rem
      padding 0 1em
      color #6a737d
      border-left .25em solid #dfe2e5
  pre
    font-size 0.9em
    padding 16px
    overflow-x auto
    line-height 1.45
    background-color #f8f8f8
    color #333
    border-radius 3px
    .comment,
    .quote 
      color #6a737d
    .number,
    .literal,
    .variable,
    .template-variable,
    .tag .attr 
      color #008080
    .string,
    .doctag 
      color #d14
    .subst 
    .type
      color #458
    .tag,
    .name,
    .attribute 
      color #000080
    .regexp,
    .link 
      color #009926
    .symbol,
    .bullet 
      color #990073
    .built_in,
    .builtin-name 
      color #0086b3
    .meta 
      color #999
    .deletion 
      background #fdd
    .addition 
      background #dfd
    .emphasis 
      font-style italic
    .strong 
      font-weight bold
    .function .keyword,
    .constant
      color #0092db
    .keyword
      color #e96900
    .title
      font-size 1rem